<Application x:Class="WpfInteractionApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:WpfInteractionApp.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/CarbonColors.xaml"/>
                <ResourceDictionary Source="Themes/CarbonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>