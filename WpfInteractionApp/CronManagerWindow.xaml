<Window x:Class="WpfInteractionApp.CronManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WpfInteractionApp.Converters"
        Title="Cron Job Manager" Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Carbon.Brush.Background.Primary}"
        Foreground="{DynamicResource Carbon.Brush.Text.Primary}"
        Style="{DynamicResource Carbon.Window}">
    
    <Window.Resources>
        <!-- Converters -->
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        <converters:LastResultConverter x:Key="LastResultConverter"/>
        <converters:LastResultColorConverter x:Key="LastResultColorConverter"/>
        <converters:EnableButtonTextConverter x:Key="EnableButtonTextConverter"/>
        <converters:EnableButtonColorConverter x:Key="EnableButtonColorConverter"/>

        <!-- Modern Card Style -->
        <Style x:Key="JobCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Background.Secondary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="4" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource Carbon.Brush.Info.Primary}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="8" ShadowDepth="3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource Carbon.Button.Secondary}">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- ComboBox Styles -->
        <Style x:Key="MainWindow.ComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Background.Secondary}"/>
            <Setter Property="Foreground" Value="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Border" 
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="20" />
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Margin="6,3"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center" />
                                                <Path x:Name="Arrow"
                                                      Grid.Column="1"
                                                      Fill="{DynamicResource Carbon.Brush.Text.Primary}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Data="M0,0 L4,4 L8,0 Z"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            Margin="6,3"
                                            IsHitTestVisible="False"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>
                            <Popup x:Name="Popup"
                                   AllowsTransparency="True"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                      SnapsToDevicePixels="True">
                                    <Border x:Name="DropDownBorder"
                                            Background="{DynamicResource Carbon.Brush.Background.Secondary}"
                                            BorderBrush="{DynamicResource Carbon.Brush.Background.Tertiary}"
                                            BorderThickness="1"/>
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="MainWindow.ComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Background.Secondary}"/>
            <Setter Property="Foreground" Value="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                Padding="6,3">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modern Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource Carbon.Brush.Background.Secondary}"
                BorderBrush="{DynamicResource Carbon.Brush.Background.Tertiary}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="⏰ Cron Job Manager" 
                               Style="{StaticResource Carbon.TextBlock.Heading}"
                               FontSize="24"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="JobCountText" 
                               Text="0 jobs scheduled"
                               Style="{StaticResource Carbon.TextBlock.Helper}"
                               FontSize="14"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border x:Name="SchedulerStatusBorder"
                            Style="{StaticResource StatusBadge}"
                            Background="{DynamicResource Carbon.Brush.Success.Background}"
                            BorderBrush="{DynamicResource Carbon.Brush.Success.Primary}"
                            BorderThickness="1"
                            Margin="0,0,12,0">
                        <TextBlock x:Name="SchedulerStatusText"
                                   Text="Scheduler: Running"
                                   Foreground="{DynamicResource Carbon.Brush.Success.Primary}"
                                   FontWeight="SemiBold"
                                   FontSize="12"/>
                    </Border>
                    
                    <Button Content="🔄 Refresh" 
                            Click="RefreshJobs_Click"
                            Style="{StaticResource Carbon.Button.Primary}"
                            Margin="0,0,8,0"/>
                    <Button Content="➕ Add Job" 
                            Click="AddJob_Click"
                            Style="{StaticResource Carbon.Button.Success}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search and Filter Bar -->
        <Border Grid.Row="1" 
                Background="{DynamicResource Carbon.Brush.Background.Secondary}"
                BorderBrush="{DynamicResource Carbon.Brush.Background.Tertiary}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="SearchBox" 
                         Grid.Column="0"
                         Style="{DynamicResource Carbon.TextBox}"
                         FontSize="13"
                         Height="32"
                         Padding="12,8"
                         TextChanged="SearchBox_TextChanged">
                    <TextBox.Resources>
                        <Style TargetType="TextBox" BasedOn="{StaticResource Carbon.TextBox}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                <TextBlock Text="🔍 Search jobs..."
                                                          Foreground="#999999"
                                                          FontSize="13"
                                                          Margin="12,0,0,0"
                                                          VerticalAlignment="Center"
                                                          IsHitTestVisible="False">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                
                <ComboBox x:Name="StatusFilter" 
                          Grid.Column="1"
                          Width="120"
                          Height="32"
                          Margin="12,0,0,0"
                          Style="{StaticResource MainWindow.ComboBox}"
                          SelectionChanged="StatusFilter_SelectionChanged">
                    <ComboBoxItem Content="All Jobs" IsSelected="True" Style="{StaticResource MainWindow.ComboBoxItem}"/>
                    <ComboBoxItem Content="Active" Style="{StaticResource MainWindow.ComboBoxItem}"/>
                    <ComboBoxItem Content="Disabled" Style="{StaticResource MainWindow.ComboBoxItem}"/>
                </ComboBox>
                
                <Button Content="🗑️ Clear" 
                        Grid.Column="2"
                        Click="ClearSearch_Click"
                        Style="{StaticResource Carbon.Button.IconSmall}"
                        Width="32" Height="32"
                        Margin="8,0,0,0"
                        ToolTip="Clear Search"/>
            </Grid>
        </Border>

        <!-- Modern Job Cards -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="JobsItemsControl" 
                          Margin="0,0,0,16">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource JobCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Job Header -->
                                <Grid Grid.Row="0" Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding JobId}" 
                                                   Style="{StaticResource Carbon.TextBlock.Base}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding CronExpression}" 
                                                   Style="{StaticResource Carbon.TextBlock.Helper}"
                                                   FontFamily="Consolas"
                                                   FontSize="13"/>
                                    </StackPanel>
                                    
                                    <Border Grid.Column="1" 
                                            VerticalAlignment="Top">
                                        <Border.Style>
                                            <Style TargetType="Border" BasedOn="{StaticResource StatusBadge}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Enabled}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Success.Background}"/>
                                                        <Setter Property="BorderBrush" Value="{DynamicResource Carbon.Brush.Success.Primary}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Enabled}" Value="False">
                                                        <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Warning.Background}"/>
                                                        <Setter Property="BorderBrush" Value="{DynamicResource Carbon.Brush.Warning.Primary}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Enabled, Converter={StaticResource BoolToStatusConverter}}" 
                                                   FontSize="11"
                                                   FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Enabled}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource Carbon.Brush.Success.Primary}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Enabled}" Value="False">
                                                            <Setter Property="Foreground" Value="{DynamicResource Carbon.Brush.Warning.Primary}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </Grid>
                                
                                <!-- Job Details -->
                                <Grid Grid.Row="1" Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Next Execution" 
                                                   Style="{StaticResource Carbon.TextBlock.Helper}"
                                                   FontSize="11"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding NextExecution, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" 
                                                   Style="{StaticResource Carbon.TextBlock.Base}"
                                                   FontFamily="Consolas"
                                                   FontSize="12"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Executions" 
                                                   Style="{StaticResource Carbon.TextBlock.Helper}"
                                                   FontSize="11"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding ExecutionCount}" 
                                                   Style="{StaticResource Carbon.TextBlock.Base}"
                                                   FontWeight="SemiBold"
                                                   FontSize="12"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Last Result" 
                                                   Style="{StaticResource Carbon.TextBlock.Helper}"
                                                   FontSize="11"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock FontSize="12"
                                                   FontWeight="SemiBold">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource LastResultConverter}">
                                                    <Binding Path="LastError"/>
                                                    <Binding Path="LastExecution"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{StaticResource LastResultColorConverter}">
                                                    <Binding Path="LastError"/>
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Action Buttons -->
                                <StackPanel Grid.Row="2" 
                                            Orientation="Horizontal" 
                                            HorizontalAlignment="Right">
                                    <Button Content="📝 Edit"
                                            Command="{Binding DataContext.EditJobCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding JobId}"
                                            Style="{StaticResource ActionButton}"/>
                                    
                                    <Button Content="{Binding Enabled, Converter={StaticResource EnableButtonTextConverter}}"
                                            Command="{Binding DataContext.ToggleJobCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding JobId}">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource ActionButton}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Enabled}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Warning.Primary}"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Enabled}" Value="False">
                                                        <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Success.Primary}"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    
                                    <Button Content="▶️ Trigger"
                                            Command="{Binding DataContext.TriggerJobCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding JobId}"
                                            Style="{StaticResource Carbon.Button.Primary}"/>
                                    
                                    <Button Content="🗑️ Delete"
                                            Command="{Binding DataContext.DeleteJobCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding JobId}"
                                            Style="{StaticResource Carbon.Button.Danger}"
                                            Margin="8,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="3" 
                Background="{DynamicResource Carbon.Brush.Background.Secondary}"
                BorderBrush="{DynamicResource Carbon.Brush.Background.Tertiary}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="FilteredJobCountText" 
                               Text="0 jobs displayed"
                               Style="{StaticResource Carbon.TextBlock.Helper}"
                               FontSize="13"
                               Margin="0,0,16,0"/>
                    <TextBlock Text="•" 
                               Style="{StaticResource Carbon.TextBlock.Helper}"
                               FontSize="13"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="TotalJobCountText" 
                               Text="0 total jobs"
                               Style="{StaticResource Carbon.TextBlock.Helper}"
                               FontSize="13"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📊 Statistics" 
                            Click="ShowStatistics_Click"
                            Style="{StaticResource Carbon.Button.Secondary}"
                            Margin="0,0,8,0"/>
                    <Button Content="🔄 Refresh All" 
                            Click="RefreshJobs_Click"
                            Style="{StaticResource Carbon.Button.Secondary}"
                            Margin="0,0,8,0"/>
                    <Button Content="❌ Close" 
                            Click="Close_Click"
                            Style="{StaticResource Carbon.Button.Secondary}"
                            IsCancel="True"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>