<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="WpfInteractionApp.ToastNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" 
        Height="Auto" 
        Width="400"
        WindowStyle="None" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        SizeToContent="Height">
    
    <Window.Resources>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.0" To="1.0" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="FadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1.0" To="0.0" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Border Background="{DynamicResource Carbon.Brush.Background.Primary}"
            BorderBrush="{DynamicResource Carbon.Brush.Background.Tertiary}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="4" 
                            Direction="270" 
                            Color="#40000000" 
                            BlurRadius="12" 
                            Opacity="0.25"/>
        </Border.Effect>
        
        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel x:Name="MainPanel" Grid.Column="0" Margin="0,0,16,0">
                <TextBlock x:Name="TitleBlock" 
                          Style="{DynamicResource Carbon.TextBlock.Subheading}"
                          Visibility="{Binding Text, ElementName=TitleBlock, Converter={StaticResource StringToVisibilityConverter}}"
                          Margin="0,0,0,4"/>
                
                <TextBlock x:Name="MessageBlock" 
                          Style="{DynamicResource Carbon.TextBlock.Body}"
                          TextWrapping="Wrap"
                          IsHitTestVisible="True"
                          Focusable="True"
                          TextTrimming="None"
                          SelectionBrush="{DynamicResource Carbon.Brush.Selection}"
                          IsManipulationEnabled="True"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Style="{DynamicResource CloseButtonStyle}"
                    Click="CloseButton_Click"
                    VerticalAlignment="Top"/>
        </Grid>
    </Border>
</Window>