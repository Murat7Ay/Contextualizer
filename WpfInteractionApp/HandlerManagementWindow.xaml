<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="WpfInteractionApp.HandlerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Handler Management" Height="600" Width="900"
        Style="{DynamicResource Carbon.Window}"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <!-- Enable/Disable Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="Button" BasedOn="{StaticResource Carbon.Button.Secondary}">
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{DynamicResource Carbon.Card}" Margin="0,0,0,16" Padding="16">
            <StackPanel>
                <TextBlock Text="âš™ï¸ Handler Management" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
                <TextBlock Text="Enable or disable handlers to control which ones process clipboard content" 
                          FontSize="13" Opacity="0.7" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Stats Bar -->
        <Border Grid.Row="1" Background="{DynamicResource Carbon.Brush.Background.Secondary}" 
                BorderBrush="{DynamicResource Carbon.Brush.Background.Tertiary}"
                BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Total Handlers" FontSize="11" Opacity="0.7" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalHandlersText" Text="0" FontSize="24" FontWeight="Bold" 
                              Foreground="{DynamicResource Carbon.Brush.Text.Primary}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Enabled" FontSize="11" Opacity="0.7" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="EnabledHandlersText" Text="0" FontSize="24" FontWeight="Bold" 
                              Foreground="{StaticResource Carbon.Brush.Success.Primary}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Disabled" FontSize="11" Opacity="0.7" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="DisabledHandlersText" Text="0" FontSize="24" FontWeight="Bold" 
                              Foreground="{StaticResource Carbon.Brush.Danger.Primary}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Handlers List -->
        <Border Grid.Row="2" Background="{DynamicResource Carbon.Brush.Background.Secondary}"
                BorderBrush="{DynamicResource Carbon.Brush.Background.Tertiary}"
                BorderThickness="1" CornerRadius="6">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                <ItemsControl x:Name="HandlersListBox" Margin="4">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource Carbon.Brush.Background.Primary}"
                                    BorderBrush="{DynamicResource Carbon.Brush.Background.Tertiary}"
                                    BorderThickness="1" CornerRadius="6" Margin="0,0,0,8" Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Indicator -->
                                    <Border Grid.Column="0" Width="8" Height="8" CornerRadius="4" 
                                            Margin="0,0,12,0" VerticalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource Carbon.Brush.Success.Primary}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Enabled}" Value="False">
                                                        <Setter Property="Background" Value="{StaticResource Carbon.Brush.Danger.Primary}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <!-- Handler Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold"
                                                  Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
                                        <TextBlock Text="{Binding Description}" FontSize="12" Opacity="0.7"
                                                  TextWrapping="Wrap" Margin="0,2,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <Border Background="{DynamicResource Carbon.Brush.Background.Tertiary}"
                                                    CornerRadius="3" Padding="6,2" Margin="0,0,4,0">
                                                <TextBlock Text="{Binding Type}" FontSize="10" FontWeight="SemiBold"
                                                          Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
                                            </Border>
                                            <Border CornerRadius="3" Padding="6,2">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{StaticResource Carbon.Brush.Success.Background}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Enabled}" Value="False">
                                                                <Setter Property="Background" Value="{StaticResource Carbon.Brush.Danger.Background}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="10" FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="âœ“ Enabled"/>
                                                            <Setter Property="Foreground" Value="{StaticResource Carbon.Brush.Success.Primary}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Enabled}" Value="False">
                                                                    <Setter Property="Text" Value="âœ— Disabled"/>
                                                                    <Setter Property="Foreground" Value="{StaticResource Carbon.Brush.Danger.Primary}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                            <!-- MCP badge -->
                                            <Border CornerRadius="3" Padding="6,2" Margin="4,0,0,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding McpEnabled}" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource Carbon.Brush.Info.Background}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="10" FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="MCP Off"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource Carbon.Brush.Text.Secondary}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding McpEnabled}" Value="True">
                                                                    <Setter Property="Text" Value="MCP On"/>
                                                                    <Setter Property="Foreground" Value="{StaticResource Carbon.Brush.Info.Primary}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Toggle Button -->
                                    <StackPanel Grid.Column="2" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <Button Style="{StaticResource ToggleButtonStyle}"
                                                Tag="{Binding Name}"
                                                Click="ToggleHandler_Click"
                                                Margin="0,0,0,6">
                                            <Button.Content>
                                                <TextBlock>
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Disable"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Enabled}" Value="False">
                                                                    <Setter Property="Text" Value="Enable"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Button.Content>
                                        </Button>
                                        
                                        <Button Style="{StaticResource ToggleButtonStyle}"
                                                Tag="{Binding Name}"
                                                Click="ToggleMcp_Click">
                                            <Button.Content>
                                                <TextBlock>
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="MCP Enable"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding McpEnabled}" Value="True">
                                                                    <Setter Property="Text" Value="MCP Disable"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="ðŸ’¡ Tip: Disabled handlers will be skipped when processing clipboard content" 
                          FontSize="12" Opacity="0.7" VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="Close" 
                        Style="{DynamicResource Carbon.Button.Primary}" 
                        MinWidth="100" Click="Close_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>

