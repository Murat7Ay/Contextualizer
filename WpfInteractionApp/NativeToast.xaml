<Window x:Class="WpfInteractionApp.NativeToast"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" 
        Height="Auto" 
        Width="400"
        MaxWidth="500"
        MaxHeight="400"
        WindowStyle="None" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        SizeToContent="Height">
    
    <Window.Resources>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.0" To="1.0" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="FadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1.0" To="0.0" Duration="0:0:0.3"/>
        </Storyboard>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <Path Data="M0,0 L10,10 M0,10 L10,0"
                                  Stroke="{DynamicResource Carbon.Brush.Text.Primary}"
                                  StrokeThickness="1.5"
                                  Width="10"
                                  Height="10"
                                  Stretch="Uniform"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Interactive.Hover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Action Button Styles -->
        <Style x:Key="ToastActionButton.Primary" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Interactive.Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Interactive.Hover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToastActionButton.Secondary" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
            <Setter Property="Foreground" Value="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Interactive.Hover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToastActionButton.Danger" TargetType="Button">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource Carbon.Brush.Background.Secondary}"
            BorderBrush="{DynamicResource Carbon.Brush.Background.Tertiary}"
            BorderThickness="1"
            CornerRadius="8"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="4" 
                            Direction="270" 
                            Color="#40000000" 
                            BlurRadius="12" 
                            Opacity="0.25"/>
        </Border.Effect>
        
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Main Content -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Border Grid.Column="0" 
                        x:Name="IconBorder"
                        Width="32" Height="32" 
                        CornerRadius="16"
                        Margin="0,0,12,0"
                        VerticalAlignment="Top">
                    <TextBlock x:Name="IconText" 
                              FontSize="16" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              FontWeight="Bold"/>
                </Border>

                <!-- Text Content -->
                <StackPanel x:Name="MainPanel" Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="TitleBlock" 
                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource Carbon.Brush.Text.Primary}"
                              Margin="0,0,0,4"/>
                    
                    <TextBox x:Name="MessageBlock" 
                            FontSize="13"
                            Foreground="{DynamicResource Carbon.Brush.Text.Primary}"
                            Background="{DynamicResource Carbon.Brush.Background.Primary}"
                            BorderThickness="0"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            MaxWidth="300"
                            MaxHeight="200"
                            Padding="0"
                            VerticalScrollBarVisibility="Auto"/>
                    
                    <!-- Action Buttons Container -->
                    <StackPanel x:Name="ActionButtonsPanel" 
                               Orientation="Horizontal" 
                               HorizontalAlignment="Left"
                               Margin="0,12,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- Timer Display -->
                <StackPanel Grid.Column="2" 
                           VerticalAlignment="Center" 
                           Margin="12,0,12,0">
                    <TextBlock x:Name="TimerText" 
                              FontSize="12" 
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource Carbon.Brush.Text.Secondary}"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,2"/>
                    
                    <!-- Circular Progress -->
                    <Viewbox Width="24" Height="24">
                        <Grid>
                            <Ellipse Stroke="{DynamicResource Carbon.Brush.Background.Tertiary}" 
                                    StrokeThickness="2" 
                                    Width="24" Height="24"/>
                            <Path x:Name="ProgressArc" 
                                  Stroke="{DynamicResource Carbon.Brush.Interactive.Primary}" 
                                  StrokeThickness="2"/>
                        </Grid>
                    </Viewbox>
                </StackPanel>

                <!-- Close Button -->
                <Button Grid.Column="3"
                        Style="{StaticResource CloseButtonStyle}"
                        Click="CloseButton_Click"
                        VerticalAlignment="Top"/>
            </Grid>
            
            <!-- Progress Bar at Bottom -->
            <Border Grid.Row="1" 
                    Height="3" 
                    Background="{DynamicResource Carbon.Brush.Background.Tertiary}"
                    CornerRadius="1.5"
                    Margin="0,12,0,0">
                <Border x:Name="ProgressBar"
                        Background="{DynamicResource Carbon.Brush.Interactive.Primary}"
                        CornerRadius="1.5"
                        HorizontalAlignment="Left"
                        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}"/>
            </Border>
        </Grid>
    </Border>
</Window>

