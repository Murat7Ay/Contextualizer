<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Carbon Design System Colors -->
    
    <!-- Background Colors -->
    <Color x:Key="Carbon.Background.Primary">#161616</Color>
    <Color x:Key="Carbon.Background.Secondary">#262626</Color>
    <Color x:Key="Carbon.Background.Tertiary">#393939</Color>
    <Color x:Key="Carbon.Background.Active">#525252</Color>
    
    <!-- Text Colors -->
    <Color x:Key="Carbon.Text.Primary">#F4F4F4</Color>
    <Color x:Key="Carbon.Text.Secondary">#C6C6C6</Color>
    <Color x:Key="Carbon.Text.Helper">#8D8D8D</Color>
    
    <!-- Interactive Colors -->
    <Color x:Key="Carbon.Color.Interactive.Primary">#4589FF</Color>
    <Color x:Key="Carbon.Color.Interactive.Secondary">#6F6F6F</Color>
    <Color x:Key="Carbon.Color.Interactive.Hover">#0353E9</Color>
    <Color x:Key="Carbon.Color.Interactive.Active">#002D9C</Color>
    <Color x:Key="Carbon.Color.Interactive.Disabled">#6F6F6F</Color>
    
    <!-- Support Colors -->
    <Color x:Key="Carbon.Support.Error">#FA4D56</Color>
    <Color x:Key="Carbon.Support.Success">#42BE65</Color>
    <Color x:Key="Carbon.Support.Warning">#F1C21B</Color>
    <Color x:Key="Carbon.Support.Info">#4589FF</Color>
    
    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="Carbon.Brush.Background.Primary" Color="{DynamicResource Carbon.Background.Primary}" />
    <SolidColorBrush x:Key="Carbon.Brush.Background.Secondary" Color="{DynamicResource Carbon.Background.Secondary}" />
    <SolidColorBrush x:Key="Carbon.Brush.Background.Tertiary" Color="{DynamicResource Carbon.Background.Tertiary}" />
    <SolidColorBrush x:Key="Carbon.Brush.Background.Active" Color="{DynamicResource Carbon.Background.Active}" />
    <SolidColorBrush x:Key="Carbon.Brush.Background.Hover" Color="{DynamicResource Carbon.Background.Secondary}" />
    
    <SolidColorBrush x:Key="Carbon.Brush.Text.Primary" Color="{DynamicResource Carbon.Text.Primary}" />
    <SolidColorBrush x:Key="Carbon.Brush.Text.Secondary" Color="{DynamicResource Carbon.Text.Secondary}" />
    <SolidColorBrush x:Key="Carbon.Brush.Text.Helper" Color="{DynamicResource Carbon.Text.Helper}" />
    
    <SolidColorBrush x:Key="Carbon.Brush.Interactive.Primary" Color="{DynamicResource Carbon.Color.Interactive.Primary}" />
    <SolidColorBrush x:Key="Carbon.Brush.Interactive.Secondary" Color="{DynamicResource Carbon.Color.Interactive.Secondary}" />
    <SolidColorBrush x:Key="Carbon.Brush.Interactive.Hover" Color="{DynamicResource Carbon.Color.Interactive.Hover}" />
    <SolidColorBrush x:Key="Carbon.Brush.Interactive.Active" Color="{DynamicResource Carbon.Color.Interactive.Active}" />
    <SolidColorBrush x:Key="Carbon.Brush.Interactive.Disabled" Color="{DynamicResource Carbon.Color.Interactive.Disabled}" />
    
    <SolidColorBrush x:Key="Carbon.Brush.Support.Error" Color="{DynamicResource Carbon.Support.Error}" />
    <SolidColorBrush x:Key="Carbon.Brush.Support.Success" Color="{DynamicResource Carbon.Support.Success}" />
    <SolidColorBrush x:Key="Carbon.Brush.Support.Warning" Color="{DynamicResource Carbon.Support.Warning}" />
    <SolidColorBrush x:Key="Carbon.Brush.Support.Info" Color="{DynamicResource Carbon.Support.Info}" />

    <!-- Effects -->
    <DropShadowEffect x:Key="DropShadowEffect" 
                      ShadowDepth="4" 
                      Direction="270" 
                      Color="#40000000" 
                      BlurRadius="12" 
                      Opacity="0.25"/>
</ResourceDictionary> 