<Page x:Class="WpfInteractionApp.Pages.CronPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="Cron Jobs">

    <StackPanel Margin="24">
        <TextBlock Text="Cron Jobs"
                   FontSize="28"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

        <TextBlock Text="Zamanlanmış işleri görüntüleyin ve yönetin."
                   Margin="0,6,0,16"
                   Opacity="0.75"
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

        <ui:Card Padding="16">
            <StackPanel>
                <TextBlock Text="Cron Manager"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8" />

                <TextBlock Text="Job ekleme/çıkarma, enable/disable ve manuel tetikleme işlemleri."
                           Opacity="0.8"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           Margin="0,0,0,12" />

                <ui:Button Click="OpenCronManager_Click">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Timer24" />
                    </ui:Button.Icon>
                    Open Cron Manager
                </ui:Button>
            </StackPanel>
        </ui:Card>
    </StackPanel>
</Page>


