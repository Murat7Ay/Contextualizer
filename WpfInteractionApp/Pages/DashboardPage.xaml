<Page x:Class="WpfInteractionApp.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="Dashboard">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <TextBlock Text="Dashboard"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

            <TextBlock Text="Contextualizer'ın genel durumu ve hızlı aksiyonlar."
                       Margin="0,6,0,16"
                       Opacity="0.75"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ui:Card Grid.Column="0" Margin="0,0,12,0" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="ClipboardTask24" Margin="0,0,8,0" />
                            <TextBlock Text="Active Handlers" FontWeight="SemiBold" />
                        </StackPanel>

                        <TextBlock x:Name="HandlersCountText"
                                   Text="0"
                                   FontSize="36"
                                   FontWeight="SemiBold"
                                   Margin="0,12,0,12"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                        <ui:Button Click="ManageHandlers_Click">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Settings24" />
                            </ui:Button.Icon>
                            Manage
                        </ui:Button>
                    </StackPanel>
                </ui:Card>

                <ui:Card Grid.Column="1" Margin="0,0,12,0" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Timer24" Margin="0,0,8,0" />
                            <TextBlock Text="Cron Jobs" FontWeight="SemiBold" />
                        </StackPanel>

                        <TextBlock x:Name="CronCountText"
                                   Text="0"
                                   FontSize="36"
                                   FontWeight="SemiBold"
                                   Margin="0,12,0,12"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                        <ui:Button Click="OpenCronManager_Click">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Timer24" />
                            </ui:Button.Icon>
                            Open Cron Manager
                        </ui:Button>
                    </StackPanel>
                </ui:Card>

                <ui:Card Grid.Column="2" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Cart24" Margin="0,0,8,0" />
                            <TextBlock Text="Marketplace" FontWeight="SemiBold" />
                        </StackPanel>

                        <TextBlock Text="Handler şablonlarını keşfet ve yükle."
                                   Opacity="0.8"
                                   Margin="0,12,0,12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

                        <ui:Button Click="OpenMarketplace_Click">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Cart24" />
                            </ui:Button.Icon>
                            Explore
                        </ui:Button>
                    </StackPanel>
                </ui:Card>
            </Grid>

            <ui:Card Padding="16" Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Quick actions"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,12" />

                    <WrapPanel ItemWidth="210" ItemHeight="40">
                        <ui:Button Click="ReloadHandlers_Click" Margin="0,0,12,12">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowClockwise24" />
                            </ui:Button.Icon>
                            Reload handlers
                        </ui:Button>

                        <ui:Button Click="ManualHandlers_Click" Margin="0,0,12,12">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Flash24" />
                            </ui:Button.Icon>
                            Manual handlers
                        </ui:Button>

                        <ui:Button Click="OpenLog_Click" Margin="0,0,12,12">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="History24" />
                            </ui:Button.Icon>
                            Activity log
                        </ui:Button>

                        <ui:Button Click="OpenSettings_Click" Margin="0,0,12,12">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Settings24" />
                            </ui:Button.Icon>
                            Settings
                        </ui:Button>
                    </WrapPanel>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ScrollViewer>
</Page>


