<Page x:Class="WpfInteractionApp.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="Settings">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <TextBlock Text="Settings"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

            <TextBlock Text="Uygulama ayarları, tema ve log seçenekleri."
                       Margin="0,6,0,16"
                       Opacity="0.75"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />

            <ui:Card Padding="16" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Application settings"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8" />

                    <TextBlock Text="Dosya yolları, kısayollar ve UI tercihleri."
                               Opacity="0.8"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="0,0,0,12" />

                    <ui:Button Click="OpenSettings_Click">
                        <ui:Button.Icon>
                            <ui:SymbolIcon Symbol="Settings24" />
                        </ui:Button.Icon>
                        Open settings window
                    </ui:Button>
                </StackPanel>
            </ui:Card>

            <ui:Card Padding="16" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Logging"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8" />

                    <TextBlock Text="Local logging, usage tracking ve minimum log seviyesi."
                               Opacity="0.8"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="0,0,0,12" />

                    <ui:Button Click="OpenLoggingSettings_Click">
                        <ui:Button.Icon>
                            <ui:SymbolIcon Symbol="ClipboardTextEdit24" />
                        </ui:Button.Icon>
                        Open logging settings
                    </ui:Button>
                </StackPanel>
            </ui:Card>

            <ui:Card Padding="16">
                <StackPanel>
                    <TextBlock Text="Theme"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8" />

                    <TextBlock Text="Light / Dark / Dim (Dim, Dark tabanlıdır)."
                               Opacity="0.8"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="0,0,0,12" />

                    <StackPanel Orientation="Horizontal">
                        <ui:Button Click="ThemeLight_Click">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="WeatherSunny24" />
                            </ui:Button.Icon>
                            Light
                        </ui:Button>

                        <ui:Button Click="ThemeDark_Click" Margin="8,0,0,0">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="WeatherMoon24" />
                            </ui:Button.Icon>
                            Dark
                        </ui:Button>

                        <ui:Button Click="ThemeDim_Click" Margin="8,0,0,0">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="WeatherPartlyCloudyNight24" />
                            </ui:Button.Icon>
                            Dim
                        </ui:Button>
                    </StackPanel>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ScrollViewer>
</Page>


