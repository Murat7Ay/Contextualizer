<Window x:Class="WpfInteractionApp.UserInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" Height="250" Width="400"
        Background="#161616" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="MessageText" Foreground="#F4F4F4" FontSize="14" TextWrapping="Wrap" />
        <TextBox x:Name="InputTextBox" Grid.Row="1" Margin="0,10,0,0" Foreground="#F4F4F4" Background="#262626" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Tamam" Width="80" Margin="0,0,10,0" Click="OkButton_Click" />
            <Button Content="İptal" Width="80" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>