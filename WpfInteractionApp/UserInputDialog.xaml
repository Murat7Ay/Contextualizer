<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="WpfInteractionApp.UserInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" 
        Height="Auto" 
        Width="500"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Carbon.Brush.Background.Primary}"
        Foreground="{DynamicResource Carbon.Brush.Text.Primary}"
        WindowStyle="ToolWindow" 
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Enhanced ComboBox Style -->
        <Style TargetType="ComboBox" BasedOn="{StaticResource Carbon.ComboBox}">
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
        
        <!-- Enhanced ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem" BasedOn="{StaticResource Carbon.ComboBoxItem}"/>

        <!-- Enhanced TextBox Style -->
        <Style TargetType="TextBox" BasedOn="{StaticResource Carbon.TextBox}">
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <!-- Enhanced PasswordBox Style -->
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Background.Secondary}"/>
            <Setter Property="Foreground" Value="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <!-- Enhanced ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Background.Secondary}"/>
            <Setter Property="Foreground" Value="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinHeight" Value="100"/>
            <Setter Property="MaxHeight" Value="200"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ✨ Enhanced Header with Progress -->
        <Border Grid.Row="0" Background="{DynamicResource Carbon.Brush.Background.Secondary}" 
                Padding="20" Margin="-24,-24,-24,16" CornerRadius="8,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="TitleText" Text="{Binding Title}" FontWeight="Bold" FontSize="18"
                              Style="{DynamicResource Carbon.TextBlock.Base}"/>
                    <TextBlock x:Name="MessageText" TextWrapping="Wrap" Margin="0,8,0,0"
                              Style="{DynamicResource Carbon.TextBlock.Body}" Opacity="0.8"/>
                </StackPanel>
                
                <!-- ✨ Progress Indicator -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="CurrentStepText" Text="1" FontWeight="Bold" FontSize="14"
                              Style="{DynamicResource Carbon.TextBlock.Base}"/>
                    <TextBlock Text=" / " Opacity="0.6" FontSize="14" Margin="2,0"
                              Style="{DynamicResource Carbon.TextBlock.Base}"/>
                    <TextBlock x:Name="TotalStepsText" Text="1" Opacity="0.6" FontSize="14"
                              Style="{DynamicResource Carbon.TextBlock.Base}"/>
                    <Border Background="{StaticResource Carbon.Brush.Info.Primary}" Width="60" Height="6" 
                           CornerRadius="3" Margin="12,0,0,0">
                        <Border x:Name="ProgressBar" Background="{StaticResource Carbon.Brush.Success.Primary}" 
                               Height="6" CornerRadius="3" HorizontalAlignment="Left" Width="20"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Required Field Indicator -->
        <TextBlock Grid.Row="1"
                  x:Name="RequiredIndicator"
                  Text="* Required field"
                  Foreground="Red"
                  Visibility="Collapsed"
                  Margin="0,0,0,8"/>

        <!-- ✨ Enhanced Validation Feedback -->
        <Border Grid.Row="2" x:Name="ValidationBorder" Background="{StaticResource Carbon.Brush.Danger.Background}" 
                BorderBrush="{StaticResource Carbon.Brush.Danger.Primary}" BorderThickness="1" 
                CornerRadius="6" Padding="12" Margin="0,0,0,12" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚠️" Foreground="{StaticResource Carbon.Brush.Danger.Primary}" 
                          Margin="0,0,8,0" FontSize="16"/>
                <StackPanel>
                    <TextBlock x:Name="ValidationErrorText" Foreground="{StaticResource Carbon.Brush.Danger.Primary}" 
                              TextWrapping="Wrap" FontWeight="SemiBold" FontSize="14"
                              Style="{DynamicResource Carbon.TextBlock.Base}"/>
                    <TextBlock x:Name="ValidationPatternText" TextWrapping="Wrap" 
                              Foreground="{StaticResource Carbon.Brush.Danger.Primary}" 
                              FontSize="12" Margin="0,4,0,0" Opacity="0.8"
                              Style="{DynamicResource Carbon.TextBlock.Base}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ✨ Success Feedback -->
        <Border Grid.Row="2" x:Name="SuccessBorder" Background="{StaticResource Carbon.Brush.Success.Background}" 
                BorderBrush="{StaticResource Carbon.Brush.Success.Primary}" BorderThickness="1" 
                CornerRadius="6" Padding="12" Margin="0,0,0,12" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="✅" Foreground="{StaticResource Carbon.Brush.Success.Primary}" 
                          Margin="0,0,8,0" FontSize="16"/>
                <TextBlock x:Name="SuccessText" Text="Input is valid" 
                          Foreground="{StaticResource Carbon.Brush.Success.Primary}" 
                          FontWeight="SemiBold" FontSize="14"
                          Style="{DynamicResource Carbon.TextBlock.Base}"/>
            </StackPanel>
        </Border>

        <!-- Input Controls Container -->
        <Grid Grid.Row="3" Margin="0,0,0,24">
            <TextBox x:Name="InputTextBox"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    VerticalScrollBarVisibility="Auto"
                    AutomationProperties.Name="User Input"
                    AutomationProperties.HelpText="Enter your input here"/>
            
            <PasswordBox x:Name="PasswordBox"
                        Visibility="Collapsed"
                        AutomationProperties.Name="Password Input"
                        AutomationProperties.HelpText="Enter your password here"/>
            
            <ComboBox x:Name="SelectionComboBox"
                      Visibility="Collapsed"
                      AutomationProperties.Name="Selection Input"
                      AutomationProperties.HelpText="Select an option from the dropdown"/>

            <ListBox x:Name="MultiSelectListBox"
                     SelectionMode="Multiple"
                     Visibility="Collapsed"
                     AutomationProperties.Name="Multiple Selection Input"
                     AutomationProperties.HelpText="Select one or more options from the list"/>

            <Grid x:Name="FilePickerGrid" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FilePathTextBox"
                         Grid.Column="0"
                         IsReadOnly="True"
                         AutomationProperties.Name="File Path"
                         AutomationProperties.HelpText="Selected file path"/>
                <Button x:Name="BrowseButton"
                        Grid.Column="1"
                        Content="Browse"
                        Style="{DynamicResource Carbon.Button.Secondary}"
                        Click="BrowseButton_Click"
                        Margin="8,0,0,0"
                        AutomationProperties.Name="Browse Files"
                        AutomationProperties.HelpText="Click to browse and select a file"/>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="BackButton"
                    Content="Back"
                    Style="{DynamicResource Carbon.Button.Secondary}"
                    Click="BackButton_Click"
                    MinWidth="100"
                    Margin="0,0,12,0"
                    Visibility="Collapsed"
                    AutomationProperties.Name="Go Back"
                    AutomationProperties.HelpText="Return to the previous step"/>
                    
            <Button Content="Cancel"
                    Style="{DynamicResource Carbon.Button.Secondary}"
                    Click="CancelButton_Click"
                    MinWidth="100"
                    Margin="0,0,12,0"
                    AutomationProperties.Name="Cancel"
                    AutomationProperties.HelpText="Cancel the input dialog and close"/>
            
            <Button x:Name="OkButton"
                    Content="OK"
                    Style="{DynamicResource Carbon.Button.Base}"
                    Click="OkButton_Click"
                    MinWidth="100"
                    IsDefault="True"
                    AutomationProperties.Name="Confirm"
                    AutomationProperties.HelpText="Confirm the input and proceed"/>
        </StackPanel>
    </Grid>
</Window>