<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="WpfInteractionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WpfInteractionApp.Converters"
        Title="Contextualizer" Height="800" Width="1200"
        Style="{DynamicResource Carbon.Window}">
    
    <Window.Resources>
        <converters:LogTypeToColorConverter x:Key="LogTypeToColorConverter"/>
        <converters:WidthToLayoutConverter x:Key="WidthToLayoutConverter"/>
        
        <!-- ✨ Responsive Styles -->
        <Style x:Key="ResponsiveDashboardGrid" TargetType="Grid">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth, Converter={StaticResource WidthToLayoutConverter}}" Value="Compact">
                    <Setter Property="Margin" Value="8"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth, Converter={StaticResource WidthToLayoutConverter}}" Value="Medium">
                    <Setter Property="Margin" Value="16,8,16,16"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth, Converter={StaticResource WidthToLayoutConverter}}" Value="Wide">
                    <Setter Property="Margin" Value="16,8,16,16"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ResponsiveCard" TargetType="Border" BasedOn="{StaticResource Carbon.Card.Subtle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth, Converter={StaticResource WidthToLayoutConverter}}" Value="Compact">
                    <Setter Property="Margin" Value="0,0,4,0"/>
                    <Setter Property="Padding" Value="12"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth, Converter={StaticResource WidthToLayoutConverter}}" Value="Medium">
                    <Setter Property="Margin" Value="0,0,8,0"/>
                    <Setter Property="Padding" Value="20"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth, Converter={StaticResource WidthToLayoutConverter}}" Value="Wide">
                    <Setter Property="Margin" Value="0,0,8,0"/>
                    <Setter Property="Padding" Value="24"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- ✨ Custom ComboBox Styles (same as HandlerExchange) -->
        <Style x:Key="MainWindow.ComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Background.Secondary}"/>
            <Setter Property="Foreground" Value="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Border" 
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="20" />
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Margin="6,3"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center" />
                                                <Path x:Name="Arrow"
                                                      Grid.Column="1"
                                                      Fill="{DynamicResource Carbon.Brush.Text.Primary}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Data="M0,0 L4,4 L8,0 Z"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            Margin="6,3"
                                            IsHitTestVisible="False"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>
                            <Popup x:Name="Popup"
                                   AllowsTransparency="True"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                      SnapsToDevicePixels="True">
                                    <Border x:Name="DropDownBorder"
                                            Background="{DynamicResource Carbon.Brush.Background.Secondary}"
                                            BorderBrush="{DynamicResource Carbon.Brush.Background.Tertiary}"
                                            BorderThickness="1"/>
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MainWindow.ComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Background.Secondary}"/>
            <Setter Property="Foreground" Value="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                Padding="6,3">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <!-- ✨ Modern Toolbar -->
        <ToolBarTray DockPanel.Dock="Top" Style="{DynamicResource Carbon.ToolBarTray}">
            <ToolBar Style="{DynamicResource Carbon.ToolBar}">
                <!-- Quick Actions -->
                <Button Content="🏠" Style="{DynamicResource Carbon.Button.Icon}" 
                       ToolTip="Home Dashboard" Click="Home_Click"/>
                <Separator Margin="4,0"/>
                
                <Button Content="📋" Style="{DynamicResource Carbon.Button.Icon}" 
                       ToolTip="Manage Handlers" Click="SettingsMenuItem_Click"/>
                <Button Content="🔄" Style="{DynamicResource Carbon.Button.Icon}" 
                       ToolTip="Cron Jobs" Click="OpenCronManager_Click"/>
                <Button Content="🛒" Style="{DynamicResource Carbon.Button.Icon}" 
                       ToolTip="Marketplace" Click="OpenHandlerExchange_Click"/>
                <Separator Margin="4,0"/>
                
                <!-- Theme Selector -->
                <TextBlock Text="Theme:" VerticalAlignment="Center" Margin="8,0,4,0" 
                          Style="{DynamicResource Carbon.TextBlock.Base}"/>
                <ComboBox x:Name="ThemeComboBox" Width="100" FontSize="11"
                         Style="{StaticResource MainWindow.ComboBox}"
                         SelectionChanged="ThemeComboBox_SelectionChanged">
                    <ComboBoxItem Content="☀️ Light" Tag="Light" Style="{StaticResource MainWindow.ComboBoxItem}" FontSize="11"/>
                    <ComboBoxItem Content="🌙 Dark" Tag="Dark" Style="{StaticResource MainWindow.ComboBoxItem}" FontSize="11"/>
                    <ComboBoxItem Content="🌆 Dim" Tag="Dim" Style="{StaticResource MainWindow.ComboBoxItem}" FontSize="11"/>
                </ComboBox>
                <Separator Margin="4,0"/>
                
                <!-- Manual Handlers Dropdown -->
                <Button x:Name="ManualHandlersButton" Content="⚡ Manual" 
                       Style="{DynamicResource Carbon.Button.Secondary}" 
                       Click="ManualHandlersButton_Click" ToolTip="Manual Handlers"/>
                <Separator Margin="4,0"/>
                
                <!-- Settings & Exit -->
                <Button Content="⚙️" Style="{DynamicResource Carbon.Button.Icon}" 
                       ToolTip="Logging Settings" Click="LoggingSettingsMenuItem_Click"/>
                <Button Content="❌" Style="{DynamicResource Carbon.Button.Icon}" 
                       ToolTip="Exit Application" Click="ExitMenuItem_Click"/>
            </ToolBar>
        </ToolBarTray>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="200"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="120" MinHeight="80" MaxHeight="200"/>
            </Grid.RowDefinitions>

            <!-- ✨ Welcome Dashboard (shown when no tabs) -->
            <Grid x:Name="WelcomeDashboard" Grid.Row="0" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- ✨ Header -->
                <Border Grid.Row="0" Style="{DynamicResource Carbon.Card}" Margin="16,16,16,8">
                    <StackPanel Margin="24">
                        <TextBlock Text="🎯 Contextualizer Dashboard" 
                                  FontSize="28" FontWeight="Bold" 
                                  Foreground="{DynamicResource Carbon.Brush.Text.Primary}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Clipboard automation made simple" 
                                  FontSize="16" Opacity="0.7" Margin="0,8,0,0"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- ✨ Responsive Quick Actions Grid -->
                <Grid Grid.Row="1" Style="{DynamicResource ResponsiveDashboardGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="250"/>
                        <ColumnDefinition Width="*" MinWidth="250"/>
                        <ColumnDefinition Width="*" MinWidth="250"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Handler Stats Card -->
                    <Border Grid.Column="0" Style="{DynamicResource ResponsiveCard}">
                        <StackPanel Margin="24">
                            <TextBlock Text="📋" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            <TextBlock Text="Active Handlers" FontWeight="SemiBold" FontSize="16" 
                                      HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock x:Name="HandlerCountText" Text="0" FontSize="32" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="{StaticResource Carbon.Brush.Success.Primary}"
                                      Margin="0,0,0,16"/>
                            <Button Content="Manage Handlers" Style="{DynamicResource Carbon.Button.Primary}" 
                                   Click="ManageHandlers_Click" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Cron Jobs Card -->
                    <Border Grid.Column="1" Style="{DynamicResource ResponsiveCard}">
                        <StackPanel Margin="24">
                            <TextBlock Text="⏰" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            <TextBlock Text="Scheduled Jobs" FontWeight="SemiBold" FontSize="16" 
                                      HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock x:Name="CronJobsCountText" Text="0" FontSize="32" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="{StaticResource Carbon.Brush.Info.Primary}"
                                      Margin="0,0,0,16"/>
                            <Button Content="Cron Manager" Style="{DynamicResource Carbon.Button.Primary}" 
                                   Click="CronManager_Click" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Marketplace Card -->
                    <Border Grid.Column="2" Style="{DynamicResource ResponsiveCard}">
                        <StackPanel Margin="24">
                            <TextBlock Text="🛒" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            <TextBlock Text="Marketplace" FontWeight="SemiBold" FontSize="16" 
                                      HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="Browse Templates" FontSize="14" HorizontalAlignment="Center" 
                                      Opacity="0.7" Margin="0,0,0,16"/>
                            <Button Content="Explore" Style="{DynamicResource Carbon.Button.Success}" 
                                   Click="Marketplace_Click" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <TabControl Grid.Row="0" 
                       Name="TabControl" 
                       Style="{DynamicResource Carbon.TabControl}"
                       Visibility="Visible">
                 <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem" BasedOn="{StaticResource Carbon.TabItem}"/>
                </TabControl.ItemContainerStyle>
            </TabControl>

            <GridSplitter Grid.Row="1"
                         Name="GridSplitter"
                         Height="5"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         Background="{DynamicResource Carbon.Brush.Background.Tertiary}"
                         ShowsPreview="True"
                         ResizeDirection="Rows"
                         ResizeBehavior="PreviousAndNext"/>

            <!-- ✨ Enhanced Activity Log Header -->
            <Border Grid.Row="2" 
                    Background="{DynamicResource Carbon.Brush.Background.Secondary}"
                    BorderBrush="{DynamicResource Carbon.Brush.Border}"
                    BorderThickness="0,0,0,1">
                <Grid Margin="12,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="📋 Activity Log" 
                               Style="{DynamicResource Carbon.TextBlock.Base}"
                               FontWeight="SemiBold" VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBox x:Name="LogSearchBox" Width="180" Margin="0,0,8,0" 
                                Style="{DynamicResource Carbon.TextBox}"
                                FontSize="11" FontWeight="Normal" Height="28"
                                Padding="8,4"
                                TextChanged="LogSearchBox_TextChanged">
                            <TextBox.Resources>
                                <Style TargetType="TextBox" BasedOn="{StaticResource Carbon.TextBox}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                    <Grid>
                                                        <TextBlock Text="🔍 Search logs..." 
                                                                  Foreground="#999999" 
                                                                  FontSize="11"
                                                                  Margin="8,0,0,0"
                                                                  VerticalAlignment="Center"
                                                                  IsHitTestVisible="False">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                     Padding="{TemplateBinding Padding}"
                                                                     VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        
                        <ComboBox x:Name="LogLevelFilter" Width="90" FontSize="11" Height="28"
                                 Style="{StaticResource MainWindow.ComboBox}"
                                 SelectionChanged="LogLevelFilter_SelectionChanged" Margin="0,0,8,0">
                            <ComboBoxItem Content="All" IsSelected="True" Style="{StaticResource MainWindow.ComboBoxItem}" FontSize="11"/>
                            <ComboBoxItem Content="Success" Style="{StaticResource MainWindow.ComboBoxItem}" FontSize="11"/>
                            <ComboBoxItem Content="Error" Style="{StaticResource MainWindow.ComboBoxItem}" FontSize="11"/>
                            <ComboBoxItem Content="Warning" Style="{StaticResource MainWindow.ComboBoxItem}" FontSize="11"/>
                            <ComboBoxItem Content="Info" Style="{StaticResource MainWindow.ComboBoxItem}" FontSize="11"/>
                            <ComboBoxItem Content="Debug" Style="{StaticResource MainWindow.ComboBoxItem}" FontSize="11"/>
                        </ComboBox>
                        
                        <Button Content="🗑️" Style="{DynamicResource Carbon.Button.IconSmall}" 
                               ToolTip="Clear Logs" Click="ClearLogs_Click" Width="28" Height="28"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <ListBox Grid.Row="3" 
                     Name="LogListBox"
                     Style="{DynamicResource Carbon.ListBox}"
                     Margin="0,0,0,0">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="4,3"/>
                        <Setter Property="Margin" Value="1"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource Carbon.Brush.Info.Primary}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource Carbon.Brush.Background.Tertiary}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}" 
                                     Style="{DynamicResource Carbon.TextBlock.Base}"
                                     Foreground="{DynamicResource Carbon.Brush.Text.Secondary}"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     FontWeight="Normal"
                                     Margin="0,0,8,0"
                                     VerticalAlignment="Center"/>
                            <Border Background="{Binding Type, Converter={StaticResource LogTypeToColorConverter}}"
                                    CornerRadius="6"
                                    Padding="4,1"
                                    Margin="0,0,8,0">
                            <TextBlock Text="{Binding Type}" 
                                     Style="{DynamicResource Carbon.TextBlock.Base}"
                                         Foreground="White"
                                         FontSize="11"
                                         FontWeight="SemiBold"/>
                            </Border>
                            <TextBlock Text="{Binding Message}" 
                                     Style="{DynamicResource Carbon.TextBlock.Base}"
                                     VerticalAlignment="Center"
                                     FontSize="13"
                                     FontWeight="Normal"
                                     TextWrapping="NoWrap"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </DockPanel>
</Window>