<Window x:Class="WpfInteractionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Interaction App" Height="600" Width="1000"
        Background="#161616" Foreground="#F4F4F4">
    <Window.Resources>
        <!-- Carbon Design System Stilleri -->
        <Style x:Key="CarbonTextBlock" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#F4F4F4" />
        </Style>
        <Style x:Key="CarbonListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#262626" />
            <Setter Property="BorderBrush" Value="#393939" />
            <Setter Property="Foreground" Value="#F4F4F4" />
        </Style>
        <Style x:Key="CarbonTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="#161616" />
            <Setter Property="BorderBrush" Value="#393939" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Log Listesi -->
        <ListBox Grid.Column="0" x:Name="LogListBox" Style="{StaticResource CarbonListBox}" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Timestamp, StringFormat='[dd/MM/yyyy HH:mm:ss]'}" Style="{StaticResource CarbonTextBlock}" />
                        <TextBlock Text="{Binding Message}" Style="{StaticResource CarbonTextBlock}" />
                        <TextBlock Text="{Binding AdditionalInfo}" Style="{StaticResource CarbonTextBlock}" FontStyle="Italic" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Sekme Alanı -->
        <TabControl Grid.Column="1" x:Name="TabControl" Style="{StaticResource CarbonTabControl}" Margin="10">
            <!-- Sekmeler dinamik olarak eklenecek -->
        </TabControl>
    </Grid>
</Window>