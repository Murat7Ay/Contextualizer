<Window x:Class="WpfInteractionApp.NetworkUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Corporate Update Available" 
        Height="550" Width="650"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Carbon.Brush.Background}"
        WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="ðŸ¢" FontSize="24" Margin="0,0,10,0"/>
            <TextBlock Text="Corporate Update Available" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
        </StackPanel>

        <!-- Version Info -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Current Version:" 
                       FontWeight="SemiBold" Margin="0,0,15,5"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="CurrentVersionText" 
                       Foreground="{DynamicResource Carbon.Brush.Text.Secondary}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Latest Version:" 
                       FontWeight="SemiBold" Margin="0,0,15,5"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LatestVersionText" 
                       Foreground="{DynamicResource Carbon.Brush.Success}"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Release Date:" 
                       FontWeight="SemiBold" Margin="0,0,15,5"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ReleaseDateText" 
                       Foreground="{DynamicResource Carbon.Brush.Text.Secondary}"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="File Size:" 
                       FontWeight="SemiBold" Margin="0,0,15,5"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="FileSizeText" 
                       Foreground="{DynamicResource Carbon.Brush.Text.Secondary}"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Network Path:" 
                       FontWeight="SemiBold" Margin="0,0,15,5"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="NetworkPathText" 
                       Foreground="{DynamicResource Carbon.Brush.Text.Secondary}"
                       TextWrapping="Wrap"/>
        </Grid>

        <!-- Mandatory Update Notice -->
        <Border Grid.Row="2" 
                Background="{DynamicResource Carbon.Brush.Warning}"
                Padding="15,10"
                CornerRadius="5"
                Margin="0,0,0,15"
                x:Name="MandatoryUpdateBorder"
                Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âš ï¸" FontSize="16" Margin="0,0,10,0"/>
                <TextBlock Text="This is a mandatory update. The application must be updated to continue."
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource Carbon.Brush.Text.Primary}"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Release Notes -->
        <DockPanel Grid.Row="3">
            <TextBlock Text="Release Notes:" 
                       FontWeight="SemiBold" Margin="0,0,0,10"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"
                       DockPanel.Dock="Top"/>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="{DynamicResource Carbon.Brush.Background.Subtle}"
                          Padding="15">
                <TextBlock x:Name="ReleaseNotesText" 
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource Carbon.Brush.Text.Primary}"
                           LineHeight="22"/>
            </ScrollViewer>
        </DockPanel>

        <!-- Progress Section -->
        <StackPanel Grid.Row="4" Margin="0,15,0,0" Visibility="Collapsed" x:Name="ProgressPanel">
            <TextBlock x:Name="ProgressText" Text="Copying update from network..." 
                       Margin="0,0,0,5"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <ProgressBar x:Name="CopyProgressBar" 
                         Height="10" 
                         Background="{DynamicResource Carbon.Brush.Background.Subtle}"
                         Foreground="{DynamicResource Carbon.Brush.Success}"/>
            <TextBlock x:Name="ProgressDetailText" 
                       Text=""
                       Margin="0,5,0,0"
                       FontSize="11"
                       Foreground="{DynamicResource Carbon.Brush.Text.Secondary}"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            
            <!-- Network Test Button -->
            <Button x:Name="TestNetworkButton" 
                    Content="Test Network" 
                    Click="TestNetworkButton_Click"
                    Background="{DynamicResource Carbon.Brush.Background.Subtle}"
                    ToolTip="Test network connectivity to update server"/>
            
            <!-- Remind Later (only for non-mandatory) -->
            <Button x:Name="RemindLaterButton" 
                    Content="Remind Later" 
                    Click="RemindLaterButton_Click"
                    Background="{DynamicResource Carbon.Brush.Background.Subtle}"/>
            
            <!-- Install Update -->
            <Button x:Name="InstallUpdateButton" 
                    Content="Install Update" 
                    Click="InstallUpdateButton_Click"
                    Background="{DynamicResource Carbon.Brush.Success}"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
