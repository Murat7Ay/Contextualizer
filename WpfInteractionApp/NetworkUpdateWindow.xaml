<Window x:Class="WpfInteractionApp.NetworkUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Corporate Update Available" 
        Height="550" Width="650"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Carbon.Brush.Background.Secondary}"
        WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource Carbon.Brush.Interactive.Primary}"
                CornerRadius="8"
                Padding="20,15"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="ðŸ“¦ Update Available" 
                           FontSize="22" 
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="A new version of Contextualizer is ready to install" 
                           FontSize="13"
                           Foreground="White"
                           Opacity="0.9"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Version Info -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Current Version:" 
                       FontWeight="SemiBold" Margin="0,0,15,5"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="CurrentVersionText" 
                       Foreground="{DynamicResource Carbon.Brush.Text.Secondary}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Latest Version:" 
                       FontWeight="SemiBold" Margin="0,0,15,5"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LatestVersionText" 
                       Foreground="{DynamicResource Carbon.Brush.Success}"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Release Date:" 
                       FontWeight="SemiBold" Margin="0,0,15,5"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ReleaseDateText" 
                       Foreground="{DynamicResource Carbon.Brush.Text.Secondary}"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="File Size:" 
                       FontWeight="SemiBold" Margin="0,0,15,5"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="FileSizeText" 
                       Foreground="{DynamicResource Carbon.Brush.Text.Secondary}"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Network Path:" 
                       FontWeight="SemiBold" Margin="0,0,15,5"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="NetworkPathText" 
                       Foreground="{DynamicResource Carbon.Brush.Text.Secondary}"
                       TextWrapping="Wrap"/>
        </Grid>

        <!-- Mandatory Update Notice -->
        <Border Grid.Row="2" 
                Background="{DynamicResource Carbon.Brush.Support.Warning}"
                Padding="15,10"
                CornerRadius="5"
                Margin="0,0,0,15"
                x:Name="MandatoryUpdateBorder"
                Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âš ï¸" FontSize="16" Margin="0,0,10,0"/>
                <TextBlock Text="This is a mandatory update. The application must be updated to continue."
                           FontWeight="SemiBold"
                           Foreground="#161616"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Release Notes -->
        <DockPanel Grid.Row="3">
            <TextBlock Text="Release Notes:" 
                       FontWeight="SemiBold" Margin="0,0,0,10"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"
                       DockPanel.Dock="Top"/>
            
            <Border Background="{DynamicResource Carbon.Brush.Background.Tertiary}"
                    CornerRadius="6"
                    Padding="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="15">
                    <TextBlock x:Name="ReleaseNotesText" 
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource Carbon.Brush.Text.Primary}"
                               LineHeight="22"/>
                </ScrollViewer>
            </Border>
        </DockPanel>

        <!-- Progress Section -->
        <StackPanel Grid.Row="4" Margin="0,15,0,0" Visibility="Collapsed" x:Name="ProgressPanel">
            <TextBlock x:Name="ProgressText" Text="Copying update from network..." 
                       Margin="0,0,0,5"
                       Foreground="{DynamicResource Carbon.Brush.Text.Primary}"/>
            <ProgressBar x:Name="CopyProgressBar" 
                         Height="10" 
                         Background="{DynamicResource Carbon.Brush.Background.Tertiary}"
                         Foreground="{DynamicResource Carbon.Brush.Support.Success}"/>
            <TextBlock x:Name="ProgressDetailText" 
                       Text=""
                       Margin="0,5,0,0"
                       FontSize="11"
                       Foreground="{DynamicResource Carbon.Brush.Text.Secondary}"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="5" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Network Test Button - Left -->
            <Button Grid.Column="0"
                    x:Name="TestNetworkButton" 
                    Content="ðŸ”Œ Test Network" 
                    Click="TestNetworkButton_Click"
                    Background="{DynamicResource Carbon.Brush.Background.Active}"
                    Foreground="{DynamicResource Carbon.Brush.Text.Primary}"
                    Style="{StaticResource ModernButton}"
                    Margin="0"
                    ToolTip="Test network connectivity to update server"/>
            
            <!-- Right Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <!-- Remind Later (only for non-mandatory) -->
                <Button x:Name="RemindLaterButton" 
                        Content="Remind Later" 
                        Click="RemindLaterButton_Click"
                        Background="{DynamicResource Carbon.Brush.Interactive.Secondary}"
                        Foreground="{DynamicResource Carbon.Brush.Text.Primary}"
                        Style="{StaticResource ModernButton}"
                        Margin="0"/>
                
                <!-- Install Update -->
                <Button x:Name="InstallUpdateButton" 
                        Content="âœ“ Install Update" 
                        Click="InstallUpdateButton_Click"
                        Background="{DynamicResource Carbon.Brush.Interactive.Primary}"
                        Foreground="White"
                        Style="{StaticResource ModernButton}"
                        IsDefault="True"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
